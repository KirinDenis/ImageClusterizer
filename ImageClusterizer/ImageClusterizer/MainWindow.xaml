<?xml version="1.0" encoding="utf-8"?>
<Window
    x:Class="ImageClusterizer.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:ImageClusterizer"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:models="using:ImageClusterizer.Models"
    mc:Ignorable="d"
    xmlns:converters="using:ImageClusterizer.Converters"
    Title="AI :: Image Clusterizer">

    <Window.SystemBackdrop>
        <DesktopAcrylicBackdrop />
    </Window.SystemBackdrop>


    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <CommandBar Grid.Row="0" HorizontalAlignment="Left">
            <AppBarButton
                 Icon="OpenFile"
                 ToolTipService.ToolTip="Select images"
                 Label="Select location to scan images"
                 Command="{x:Bind ViewModel.StartScanImagesCommand}"
                />
            <AppBarButton
                 Icon="Stop"
                 Label="Stop scaning"
                Command="{x:Bind ViewModel.CancelScanCommand}"
                />
            <AppBarButton
                 Icon="Refresh"
                 Label="Reload exists from database"
                Command="{x:Bind ViewModel.LoadExistingClustersCommand}"
                />

            <AppBarButton Icon="Map" Label="Load map" 
                          Command="{x:Bind ViewModel.OpenClusterMapCommand}"/>

            <AppBarButton Icon="ZoomIn" Label="Zoom In" 
                          Command="{x:Bind ViewModel.ZoomInCommand}"/>
            <AppBarButton Icon="ZoomOut" Label="Zoom Out" 
                          Command="{x:Bind ViewModel.ZoomOutCommand}"/>
            <AppBarButton Icon="Refresh" Label="Reset" 
                          Command="{x:Bind ViewModel.ResetZoomCommand}"/>
            <AppBarSeparator/>

            
        </CommandBar>

        <StackPanel Grid.Row="1" Padding="20" Spacing="10"
                    Visibility="{x:Bind ViewModel.ProgressVisibility, Mode=OneWay}">
            <TextBlock>
				<Run Text="Processing: "/>
				<Run Text="{x:Bind ViewModel.CurrentFile, Mode=OneWay}"/>
            </TextBlock>
            <ProgressBar
                Value="{x:Bind ViewModel.Progress, Mode=OneWay}"
                Maximum="100"/>
            <TextBlock>
				<Run Text="{x:Bind ViewModel.ProcessedCountText, Mode=OneWay}"/>
				<Run Text=" / "/>
				<Run Text="{x:Bind ViewModel.TotalCountText, Mode=OneWay}"/>
				<Run Text=" images processed"/>
            </TextBlock>
            <TextBlock Text="{x:Bind ViewModel.ZoomLevel, Mode=OneWay}" 
                       VerticalAlignment="Center"
                       Margin="10,0"/>

        </StackPanel>

        <ScrollViewer Grid.Row="2"
                      HorizontalScrollBarVisibility="Auto"
                      VerticalScrollBarVisibility="Auto"
                      ZoomMode="Enabled"
                      MinZoomFactor="0.1"
                      MaxZoomFactor="10">

            <RelativePanel Width="{x:Bind ViewModel.CanvasWidth}"
                    Height="{x:Bind ViewModel.CanvasHeight}"
                    Background="#F5F5F5">

                <!-- Рисуем изображения (точки) -->
                <ItemsControl 
                    Margin="{Binding Converter={StaticResource PositionToMarginConverter}}"
                    ItemsSource="{x:Bind ViewModel.ImageItems, Mode=OneWay}">


                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <RelativePanel/>
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>

                    <ItemsControl.ItemTemplate>
                        
                        <DataTemplate x:DataType="models:ImageVisualItem">
                            <Grid
                                
                                >
                                <!-- Миниатюра изображения -->
                                <Border Width="20" Height="20"
                                        Margin="{Binding Converter={StaticResource PositionToMarginConverter}}"
                                        CornerRadius="10"
                                        BorderBrush="Gray"
                                        BorderThickness="1">
                                    <Border.Background>
                                        <ImageBrush ImageSource="{x:Bind ThumbnailPath}"
                                                    Stretch="UniformToFill"/>
                                    </Border.Background>
                                </Border>

                                <!-- Tooltip с информацией -->
                                <ToolTipService.ToolTip>
                                    <ToolTip>
                                        <StackPanel>
                                            <Image Source="{x:Bind ThumbnailPath}"
                                                    Margin="100,100"
                                                   Width="150" Height="150"
                                                   Stretch="Uniform"/>
                                            <TextBlock Text="{x:Bind FilePath}"
                                                       MaxWidth="200"
                                                       TextWrapping="Wrap"/>
                                        </StackPanel>
                                    </ToolTip>
                                </ToolTipService.ToolTip>
                            </Grid>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>

                <!-- Рисуем центроиды кластеров (большие круги) -->
                <ItemsControl 
                    HorizontalAlignment="Left" VerticalAlignment="Top" ItemsSource="{x:Bind ViewModel.ClusterItems, Mode=OneWay}"
                    Margin="{Binding Converter={StaticResource PositionToMarginConverter}}"
                    >
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <RelativePanel/>
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>

                    <ItemsControl.ItemTemplate>
                        <DataTemplate x:DataType="models:ClusterVisualItem">
                            <Grid
                                Margin="{Binding Converter={StaticResource PositionToMarginConverter}}"
                                >
                                <!-- Круг вокруг кластера -->
                                <Ellipse Width="60" Height="60"
                                         Fill="#40007ACC"
                                         Stroke="#007ACC"
                                         StrokeThickness="2"
                                         Margin="{Binding Converter={StaticResource PositionToMarginConverter}}"/>

                                <!-- Номер кластера -->
                                <TextBlock Text="{x:Bind ClusterId}"
                                           FontSize="16"
                                           FontWeight="Bold"
                                           Foreground="White"
                                           HorizontalAlignment="Center"
                                           VerticalAlignment="Center"/>

                                <!-- Tooltip -->
                                <ToolTipService.ToolTip>
                                    <TextBlock Text="{x:Bind Label}"/>
                                </ToolTipService.ToolTip>
                            </Grid>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </RelativePanel>
        </ScrollViewer>

        <GridView
            Visibility="Collapsed"
            Grid.Row="2"
            ItemsSource="{x:Bind ViewModel.Clusters, Mode=OneWay}"
            Padding="20">
            <GridView.ItemTemplate>
                <DataTemplate x:DataType="models:ImageCluster">
                    <Border
                        Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                        BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                        BorderThickness="1"
                        CornerRadius="8"
                        Padding="12"
                        Width="300">
                        <StackPanel Spacing="8">
                            <TextBlock
                                Text="{x:Bind ClusterId}"
                                Style="{StaticResource SubtitleTextBlockStyle}"/>
                            <TextBlock Text="{x:Bind Images.Count}"/>

                            <GridView
                                ItemsSource="{x:Bind Images}"
                                MaxHeight="200"
                                SelectionMode="None">
                                <GridView.ItemTemplate>
                                    <DataTemplate x:DataType="models:ImageVector">
                                        <Image
                                            Source="{x:Bind FilePath}"
                                            Width="80"
                                            Height="80"
                                            Stretch="UniformToFill"/>
                                    </DataTemplate>
                                </GridView.ItemTemplate>
                            </GridView>
                        </StackPanel>
                    </Border>
                </DataTemplate>
            </GridView.ItemTemplate>
        </GridView>

    </Grid>
</Window>
